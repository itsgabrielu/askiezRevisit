<div class="container is-fluid">
  <div class = "notification">
  <div>This is Home; welcome {{name}}</div>
</div>
</div>

<form action = '/' method = "post">
<div class="field">
  <label class="label">Question</label>
  <div class="control">
    <input class="input" name = "question" type="text" placeholder="Ask us something!">
  </div>
</div>
  <div class="control">
    <input type="submit" value="Ask!">
  </div>
</form>

  {{#each qList}}
  <div class="tile is-ancestor">
  <div class="tile is -4">
    <div class="tile is-child box">
    <p>{{ this.question}}</p>
    <p> {{this.createdAt}} </p>
    <form action = '/' method = "post">
      <button type="submit" name={{this._id}} value=-1>&#8595;</button>
      <button type="submit" name={{this._id}} value=1>&#8593;</button>
    </form>
    <small>{{ this.score}} points</small>
  </div>
  </div>
</div>
  {{/each}}
